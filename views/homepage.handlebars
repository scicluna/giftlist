{{#each plainOccasionList as |occasion|}}
<section class="card mb-3 occassioncard">


    <div class="card-body">
        <div class="occasiondetails">
            <h1 data-occasiontitle="{{id}}">{{occasion.name}}</h1>
            <h4><u>{{format_date occasion.date}}</u></h4><br>
            <div class="adddiv">
                <a class="btn btn-primary btn-lg btn-block homeBttn accountBttn " href="/recipient/{{occasion.id}}" role="button">Add Recipient</a>
            </div>
            <div class="edit">
                <button class="editoccasion" data-edit={{id}}><i class="fas fa-pen"></i></button>
                <button class="deleteoccasion" data-delete={{id}}><i class="fas fa-trash"></i> </button>
            </div>
            
        </div>
        <div class="card-body pt-0 pb-4">
            <h4> <em>{{occasion.location}}</em></h4>
        </div>
        {{>recipient recipients=occasion.recipients}}
    </div>
     
</section>
{{/each}}
